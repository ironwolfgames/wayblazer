{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "World",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/src/Wayblazer.World/bin/Debug/net9.0/Wayblazer.World.dll",
			"args": [
				"--config-file-template",
				"${workspaceFolder}/src/Wayblazer.Configurator/data/world-config-N.json",
				"--world-file-template",
				"${workspaceFolder}/src/Wayblazer.World/Output/world-N.json",
				">",
				"${workspaceFolder}/src/Wayblazer.World/Output/output.txt",
			],
			"cwd": "${workspaceFolder}",
			"stopAtEntry": false,
			"console": "internalConsole"
		},
		{
			"name": "Configurator",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/src/Wayblazer.Configurator/bin/Debug/net9.0/Wayblazer.Configurator.dll",
			"args": [
				"--config-folder-path",
				"${workspaceFolder}/src/Wayblazer.Configurator/data",
				"--seed",
				"42",
			],
			"cwd": "${workspaceFolder}",
			"stopAtEntry": false,
			"console": "internalConsole"
		}
	]
}
